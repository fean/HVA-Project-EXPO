            <video id="hw-video" class="video">
            	<source src="Content/video/1.ogg" type="Video/Ogg" />
            </video>
        </div>
        <div id="network-pres-right" class="presentation-block right-page">
            <video id="network-video" class="video">
            	<source src="Content/video/1.ogg" type="Video/Ogg" />
            </video>
        </div>
    </div>
    
    <div id="main-left" style="display: none;">
    	<div id="software">
    		<img id="sw" src="Content/img/software.png" />
        </div>
        <div id="sw-pres" class="presentation-block">
            <span id="sw-pres-content" class="presentation-content">

            </span>
        </div>
        
    	<div id="hardware">
			<img id="hw" src="Content/img/hardware.png" />
       	</div>
        <div id="hw-pres" class="presentation-block">
            <span id="hw-pres-content" class="presentation-content">

            </span>
        </div>
        
		<div id="network">
			<img id="nw" src="Content/img/network.png" />
		</div>
        <div id="network-pres" class="presentation-block">
            <span id="network-pres-content" class="presentation-content">

            </span>
        </div>

        <div id="interf-pres-left" class="presentation-block left-page">
            <span id="interf-pres-content" class="presentation-content">

            </span>
        </div>
        <div id="manage-pres-left" class="presentation-block left-page">       	
            <span id="manage-pres-content" class="presentation-content">

            </span>
        </div>
    </div>
    
    <video id="market-loop" class="presentation-block" data-playing="false">
        <source src="Content/video/1.ogg" type="video/ogg" />
    </video>

    <div id="select-window-bg">
    </div>
    <div id="select-window" class="opacity">
    	<div id="select-main">
        <span id="select-session">
        	<p>Select a session:
                <select id="session">
                    @if (Project.EXPO.Collective.SessionPool.Count > 0)
                    {
                        foreach(KeyValuePair<string, Project.EXPO.SessionWrap> i in Project.EXPO.Collective.SessionPool) {
                            @Html.Raw("<option value=\"" + i.Key + "\">" + i.Key + "<option>\n");
                        }
                    }
                    else
                    {
                        @Html.Raw("<option value=\"nothing\">No Sessions!<option>");
                    }
                </select>
            </p>
        </span>
        <span id="session-info">
        	<p>Session Information</p>
            <p>Session Token: <span id="token">@try { @Html.Raw(Project.EXPO.Collective.SessionPool.First().Key) } catch(Exception e) { @Html.Raw("none") }</span></p>
            <p>Left Screen Taken: <span id="left-taken">@try { @Html.Raw(Project.EXPO.Collective.SessionPool.First().Value.LeftFilled.ToString().ToLower()) } catch(Exception e) { @Html.Raw("none") }</span></p>
            <p>Right Screen Taken: <span id="right-taken">@try { @Html.Raw(Project.EXPO.Collective.SessionPool.First().Value.RightFilled.ToString().ToLower()) } catch(Exception e) { @Html.Raw("none") }</span></p>
        </span>
        <span id="screen-position">
        	<p>Select Screen Position
                <span><input type="radio" name="position" id="left-screen" />Left Screen</span>
                <span><input type="radio" name="position" id="right-screen" />Right Screen</span>
            </p>
        </span>
        <span id="start-pres" class="btn btn-primary"><i class="icon-ok icon-white"></i> Start Presentation</span>
        </div>
        <div id="wait-main" style="display: none;">
        	<image id="wait-img" src="Content/img/load.gif" class="loader" />
            <p id="wait-text" class="wait">Connecting....</p>
        </div>
    </div>